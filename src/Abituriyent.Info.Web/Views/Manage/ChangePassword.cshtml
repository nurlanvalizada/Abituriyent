@model Abituriyent.Info.Web.Models.ManageViewModels.ChangePasswordViewModel
@{
    ViewData["Title"] = "Şifrəni Dəyiş";
}<section class="grey page-title">
    <div class="container">
        <div class="row">
            <div class="col-md-6 text-left">
                <h1>Hesab Şifrəsinin Dəyişdirilməsi</h1>
            </div><!-- end col -->
            <div class="col-md-6 text-right">
                <div class="bread">
                    <ol class="breadcrumb">
                        <li>
                            <a href="#">Manage</a>
                        </li>
                        <li class="active">ChangePassword</li>
                    </ol>
                </div><!-- end bread -->
            </div><!-- end col -->
        </div><!-- end row -->
    </div><!-- end container -->
</section><!-- end section -->

<section class="white section">
    <div class="container">
        <div class="row panel-login">
            <div class="col-lg-12">
                <form asp-controller="Manage" asp-action="ChangePassword" method="post" class="form-horizontal">
                    <div class="col-lg-5 col-lg-offset-3">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <input asp-for="OldPassword" class="form-control" placeholder="Köhnə Şifrə *" />
                            <span asp-validation-for="OldPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="NewPassword" class="form-control" placeholder="Yeni Şifrə *" />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="Yeni Şifrənin Təsdiqi *" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-default">Şifrəni Dəyiş</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}