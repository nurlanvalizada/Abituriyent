<section class="white section">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section-title text-center">
                    <h4>Bizim Göstərdiyimiz Xidmətlər</h4>
                </div>
            </div><!-- end col -->
        </div><!-- end row -->
        <div class="row service-center">
            @foreach (var ourService in Model.OurServices)
            {
                <div class="col-md-4 col-sm-6">
                    <div class="feature-list">
                        @switch (ourService.Key)
                        {
                            case "LessonQuality":
                                <i class="fa fa-graduation-cap"></i>
                                break;
                            case "LessonPDFandTest":
                                <i class="fa fa-shopping-cart"></i>
                                break;
                            case "ExamEachMonth":
                                <i class="fa fa-question"></i>
                                break;
                        }
                        <p>
                            <strong>@ourService.Header</strong>
                        </p>
                        <p>@ourService.Value</p>
                    </div><!-- end service -->
                </div><!-- end col -->
            }
        </div><!-- end row -->
    </div>
</section>
<section class="grey section">
    <div class="row-fluid">
        <div class="col-md-6 myimg2"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-md-offset-6">
                    <div class="section-container nopadding">
                        <div class="textrotate">
                            <ul class="bxslider">
                                @foreach (var aboutData in Model.OurAboutDatas)
                                {
                                    <li>
                                        <div class="big-title">
                                            <h3>
                                                @Html.Raw(aboutData.Header)
                                            </h3>
                                            <div class="border-title"></div>
                                        </div><!-- big-title -->
                                        <p>@aboutData.Value</p>
                                    </li>
                                }
                            </ul>
                        </div><!-- end textrotate -->
                    </div>
                </div>
            </div><!--end of row-->
        </div><!-- end container -->
    </div><!-- end row fluid -->
</section>
@if (Model.Teachers.Any())
{
    <section class="white section">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="section-title text-center">
                        <h4>Bizim Komandamız</h4>
                        <p>Daim təcrübəli heyyətlə qarşınızdayıq. Müəllimlərimizin hər biri öz sahələrində kifayət qədər təcrübəyə malikdirlər.</p>
                    </div>
                </div><!-- end col -->
            </div><!-- end row -->
            <div class="row">
                <div class="col-md-12">
                    <div class="content-widget">
                        @await Html.PartialAsync("_Teachers", Model.Teachers.Take(4))
                        <div class="row">
                            <div class="button-wrapper text-center">
                                <a asp-controller="Home" asp-action="About" class="btn btn-default border-radius"><i class="fa fa-plus"></i> Daha Ətraflı</a>
                            </div>
                        </div>
                    </div><!-- end content-widget -->
                </div><!-- end col -->
            </div><!-- end row -->
        </div><!-- end container -->
    </section><!-- end section -->
}
@if (Model.HappyStudents.Any())
{
    <section class="grey section">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="section-title text-center">
                        <h4>Xoşbəxt Abituriyenlər</h4>
                        <p>Abituriyentlərimiz bizim haqqımızda nə söyləyirlər. Dəyərli abituriyentlərimizin fikirləri ilə tanış olun.</p>
                    </div>
                </div><!-- end col -->
            </div><!-- end row -->
            @await Html.PartialAsync("_HappyStudents", Model.HappyStudents.Take(3))
            <div class="button-wrapper text-center">
                <p>Abituriyentlərimizin fikirləri bizim üçün əsas göstəricilərdən biridir. Onların qazandıqları uğurlar həm də bizim uğurumuzdur. Daim təcrübəli pedaqoji heyyətimizlə sizlərə xidmət etməkdən məmnunluq duyuruq.</p>
                <a asp-controller="Account" asp-action="Register" class="btn btn-default border-radius"><i class="fa fa-sign-in"></i> Sən də Bizə Qoşul</a>
            </div><!-- end button-wrapper -->
        </div><!-- end container -->
    </section><!-- end section -->
}
@section Scripts{
    <!-- SLIDER REV -->
    <script src="~/rs-plugin/js/jquery.themepunch.tools.min.js"></script>
    <script src="~/rs-plugin/js/jquery.themepunch.revolution.min.js"></script>
    <script src="~/js/bxslider.js"></script>
    <script>
        jQuery(document)
            .ready(function () {
                window.jQuery('.tp-banner')
                    .show()
                    .revolution(
                    {
                        dottedOverlay: "none",
                        delay: 16000,
                        startwidth: 1170,
                        startheight: 620,
                        hideThumbs: 200,
                        thumbWidth: 100,
                        thumbHeight: 50,
                        thumbAmount: 5,
                        navigationType: "none",
                        navigationArrows: "solo",
                        navigationStyle: "preview3",
                        touchenabled: "on",
                        onHoverStop: "on",
                        swipe_velocity: 0.7,
                        swipe_min_touches: 1,
                        swipe_max_touches: 1,
                        drag_block_vertical: false,
                        parallax: "mouse",
                        parallaxBgFreeze: "on",
                        parallaxLevels: [10, 7, 4, 3, 2, 5, 4, 3, 2, 1],
                        parallaxDisableOnMobile: "off",
                        keyboardNavigation: "off",
                        navigationHAlign: "center",
                        navigationVAlign: "bottom",
                        navigationHOffset: 0,
                        navigationVOffset: 20,
                        soloArrowLeftHalign: "left",
                        soloArrowLeftValign: "center",
                        soloArrowLeftHOffset: 20,
                        soloArrowLeftVOffset: 0,
                        soloArrowRightHalign: "right",
                        soloArrowRightValign: "center",
                        soloArrowRightHOffset: 20,
                        soloArrowRightVOffset: 0,
                        shadow: 0,
                        fullWidth: "on",
                        fullScreen: "off",
                        spinner: "spinner4",
                        stopLoop: "off",
                        stopAfterLoops: -1,
                        stopAtSlide: -1,
                        shuffle: "off",
                        autoHeight: "off",
                        forceFullWidth: "off",
                        hideThumbsOnMobile: "off",
                        hideNavDelayOnMobile: 1500,
                        hideBulletsOnMobile: "off",
                        hideArrowsOnMobile: "off",
                        hideThumbsUnderResolution: 0,
                        hideSliderAtLimit: 0,
                        hideCaptionAtLimit: 0,
                        hideAllCaptionAtLilmit: 0,
                        startWithSlide: 0,
                        fullScreenOffsetContainer: ""
                    });
            });
        /* ==============================================
            Vertical Carousel
        =============================================== */
        (function ($) {
            "use strict";
            $('.bxslider')
                .bxSlider({
                    mode: 'vertical',
                    minSlides: 1,
                    maxSlides: 1,
                    slideMargin: 0,
                    pager: false,
                    nextText: '<i class="fa fa-arrow-down"></i>',
                    prevText: '<i class="fa fa-arrow-up"></i>',
                    speed: 1000,
                    auto: true
                });
        })(jQuery);
    </script>
}