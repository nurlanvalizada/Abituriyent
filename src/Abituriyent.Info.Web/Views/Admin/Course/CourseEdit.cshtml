@model Abituriyent.Info.Web.Models.ViewModels.CourseViewModel

@{
    ViewData["Title"] = "Edit Course";
    Layout = "_AdminLayout";
}

<h2>Edit</h2>

<form asp-action="CourseEdit" enctype="multipart/form-data">
    <div class="form-horizontal">
        <h4>Course</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Course.Id" />
        <input type="hidden" asp-for="Course.GroupId" />
        <input type="hidden" asp-for="Course.SubjectId" />
        <input type="hidden" asp-for="Course.ImageUrl" />
        <div class="form-group">
            <label asp-for="Course.Subject.Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Course.Subject.Name" class="form-control" disabled />
                <span asp-validation-for="Course.Subject.Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Course.Description" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Course.Description" class="form-control" />
                <span asp-validation-for="Course.Description" class="text-danger" ></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Course.ScoreRate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Course.ScoreRate" class="form-control" />
                <span asp-validation-for="Course.ScoreRate" class="text-danger" ></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="ImageUrl" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                @if (Model.Course.ImageUrl != null)
                {
                    <a href="@Model.Course.ImageUrl">Current Image</a>
                    <span>&nbsp; &nbsp;</span>
                }
                <input id="imageFile" name="imageFile" type="file" class="form-control file2 inline btn btn-primary" data-label="<i class='glyphicon glyphicon-file'></i>Select New Image" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Course.Teacher" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="Course.TeacherId" asp-items="@Model.Teachers" class="form-control">
                    <option>Müəllim Seç</option>
                </select>
                <span asp-validation-for="Course.TeacherId" class="text-danger"></span>
                </div>
            </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="CourseIndex" asp-route-groupId="@Model.Course.GroupId">Back to List</a>
</div>