@model Abituriyent.Info.Core.Domain.Exam

@{
    ViewData["Title"] = "Edit Exam";
    Layout = "_AdminLayout";
}

<h2>Edit</h2>

<form asp-action="ExamEdit">
    <div class="form-horizontal">
        <h4>Exam</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label class="col-md-2 control-label">Exam Type</label>
            <div class="col-md-10">
                <select asp-for="@Model.ExamType" asp-items="@ViewBag.ExamTypes" class="form-control">
                    <option>Select Type</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger" ></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Date" class="col-md-2 control-label"></label>
            <div class="col-sm-3">
                <input asp-for="Date" value="@Model.Date.ToString("MM.dd.yyyy")" data-format="mm.dd.yyyy" class="form-control datepicker" />
                <span asp-validation-for="Date" class="text-danger" ></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="StartTime" class="col-md-2 control-label"></label>
            <div class="col-sm-2">
                <div class="input-group">
                    <input asp-for="StartTime" class="form-control timepicker" data-template="dropdown" data-show-seconds="true" data-default-time="11:00:00" data-show-meridian="false" data-minute-step="5" data-second-step="5" />

                    <div class="input-group-addon">
                        <a href="#"><i class="entypo-clock"></i></a>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="EndTime" class="col-md-2 control-label"></label>
            <div class="col-sm-2">
                <div class="input-group">
                    <input asp-for="EndTime" class="form-control timepicker" data-template="dropdown" data-show-seconds="true" data-default-time="13:00:00" data-show-meridian="false" data-minute-step="5" data-second-step="5" />

                    <div class="input-group-addon">
                        <a href="#"><i class="entypo-clock"></i></a>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="ExamIndex">Back to List</a>
</div>

@section Scripts {
    <script src="~/admin/assets/js/bootstrap-datepicker.js"></script>
    <script src="~/admin/assets/js/bootstrap-timepicker.min.js"></script>
    <script src="~/admin/assets/js/bootstrap-colorpicker.min.js"></script>
    <script src="~/admin/assets/js/daterangepicker/moment.min.js"></script>
    <script src="~/admin/assets/js/daterangepicker/daterangepicker.js"></script>
}
