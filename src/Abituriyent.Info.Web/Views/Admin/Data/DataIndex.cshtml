@model IEnumerable<Abituriyent.Info.Core.Domain.DataDictionary>

@{
    ViewData["Title"] = "Other Datas";
    Layout = "_AdminLayout";
}

<h2>Other Datas</h2>
<br />
<p>
    <a asp-action="DataCreate">Add Data</a>
</p>

<table class="table table-bordered table-striped datatable" id="table-2">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Key)</th>
            <th>@Html.DisplayNameFor(model => model.Header)</th>
            <th colspan="3" class="text-center">Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Key)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Header)
                </td>
                <td>
                    <a asp-action="DataEdit" asp-route-id="@item.Id" class="btn btn-default btn-sm btn-icon icon-left">
                        <i class="entypo-pencil"></i>
                        Edit
                    </a>
                </td>
                <td>
                    <a asp-action="DataDetails" asp-route-id="@item.Id" class="btn btn-info btn-sm btn-icon icon-left">
                        <i class="entypo-info"></i>
                        Details
                    </a>
                </td>
                <td>
                    <form asp-controller="Admin" asp-action="DataDelete" method="post">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button onclick="return confirm('Are you sure you want to delete this item ?')" type="submit" class="btn btn-danger btn-sm btn-icon icon-left">
                            <i class="entypo-cancel"></i>
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>