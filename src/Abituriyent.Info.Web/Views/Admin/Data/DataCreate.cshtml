@model Abituriyent.Info.Core.Domain.DataDictionary

@{
    ViewData["Title"] = "Create Data";
    Layout = "_AdminLayout";
}

<h2>Create</h2>

<form asp-action="DataCreate">
    <div class="form-horizontal">
        <h4>Data</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Key" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Key" class="form-control" />
                <span asp-validation-for="Key" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Header" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Header" class="form-control" />
                <span asp-validation-for="Header" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Value" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="Value" class="form-control"></textarea>
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="DataIndex">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}